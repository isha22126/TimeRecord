<p id="notice"><%= notice %></p>

<h1 style="display:inline-block; padding: 10px; margin-bottom: 10px; border: 5px double #333333; border-radius: 10px;">生徒</h1>

<table class="table table-bordered">
  <thead class="table-light">
    <tr>
      <th>名前</th>
      <th>ふりがな</th>
      <th>メールアドレス</th>
      <th>パスワード</th>
      <th>学年クラス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.kana %></td>
        <td><%= student.mail %></td>
        <td><%= student.pw %></td>
        <td><%= student.grade.full_name %></td>
        <!--<td><%= link_to '確認', student %></td>-->
        <td><%= link_to '編集', edit_student_path(student) %></td>
        <td><%= link_to '削除', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to '戻る', admin_home_path ,{class:"btn btn-outline-secondary"}%>
<br>
<%= link_to '新規作成', new_student_path ,{class:"btn btn-outline-secondary"}%>
