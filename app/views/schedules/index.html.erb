<p id="notice"><%= notice %></p>

<h1>スケジュール</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>日付</th>
      <th>開始</th>
      <th>終了</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.teacher_id %></td>
        <td><%= schedule.start.strftime("%Y-%m-%d") %></td>
        <td><%= schedule.start.strftime(" %H:%M" ) %></td>
        <td><%= schedule.finish.strftime("%m-%d %H:%M") %></td>
        <td><%= link_to '編集', edit_schedule_path(schedule) %></td>
        <td><%= link_to '削除', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

