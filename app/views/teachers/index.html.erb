<p id="notice"><%= notice %></p>

<h1 style="display:inline-block; padding: 10px; margin-bottom: 10px; border: 5px double #333333; border-radius: 10px;">先生</h1>
<table class="table table-bordered">
  <thead class="table-light">
    <tr>
      <th>名前</th>
      <th>ふりがな</th>
      <th>メールアドレス</th>
      <th>パスワード</th>
      <th>教室</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>

      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.kana %></td>
        <td><%= teacher.mail %></td>
        <td><%= teacher.pw %></td>
        <td><%= teacher.room.name %></td>
        <!--<td><%= link_to '確認', teacher %></td>-->
        <td><%= link_to '編集', edit_teacher_path(teacher) %></td>
        <td><%= link_to '削除', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
