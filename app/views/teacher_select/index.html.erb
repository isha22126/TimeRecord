<h1 style="display:inline-block; padding: 10px; margin-bottom: 10px; border: 5px double #333333; border-radius: 10px;">不在日検索</h1>
<div class="one">
    <h2 class="search">
        <%= form_tag(teacher_search_path) do %>
        <%= text_field_tag "search[name]",session[:search_name ]%><%= submit_tag"検索"%>
        <% end %>
    </h2>
</div>
<table border="2px" style="border-collapse: collapse" align="center" class="table">
<thead>
<tr>
    <th>名前</th>
    <th>教室</th>
</tr>
</thead>
<tbody>
<% @teachers.each do |teacher|%>
<tr>
    <td class = "td"><%= link_to teacher.name, teacher_schedule_path(teacher.id, Date.today) %></td>
    <td class = "td"><%= teacher.room.name %></td>
</tr>
<%end%>
</tbody>
</table>