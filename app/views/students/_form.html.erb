<%= form_with(model: student) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nam,'名前' %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :kana,'ふりがな' %>
    <%= form.text_field :kana %>
  </div>

  <div class="field">
    <%= form.label :mail,'メールアドレス' %>
    <%= form.text_field :mail %>
  </div>

  <div class="field">
    <%= form.label :pw,'パスワード' %>
    <%= form.text_field :pw %>
  </div>

  <div class="field">
    <%= form.label :grade_id,'学年クラス' %>
    <%= form.collection_select :grade_id, @grades, :id, :full_name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
