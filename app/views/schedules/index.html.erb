<p id="notice"><%= notice %></p>

<h1 align="center">スケジュール</h1>
<%= link_to'戻る',"/teacher_home",{class:"btn btn-outline-secondary"}%>
<table cellpadding="20">
  <thead>
    <tr>
      <th>日付</th>
      <th>開始</th>
      <th>終了</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td class = "td"><%= schedule.start.strftime("%Y-%m-%d") %></td>
        <td class = "td"><%= schedule.start.strftime(" %H:%M" ) %></td>
        <td class = "td"><%= schedule.finish.strftime("%m-%d %H:%M") %></td>
        <td class = "td"><%= link_to '編集', edit_schedule_path(schedule) %></td>
        <td class = "td"><%= link_to '削除', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

